<div class="center">
  <h1><%= @group.name %></h1>
  <h3><%= @group.description %></h3>
</div>
<br>
<h3>Comments</h3>

<h3>leave a comment here</h3>
<%= form_tag "/user_group/comment", :method => :post do %>
  <%= text_area_tag "comment" %>
  <%= hidden_field_tag :group_id, @group.id %>
  <%= hidden_field_tag :user_id, user_id %>
  <%= submit_tag "comment" %>
<% end %>



<br>
or <%= link_to "Create a Meetup for this Group", new_group_meetup_path(@group)%>
<br>
<%= link_to "See all the Meetups for this group", group_meetups_path(@group) %>

  <%= form_tag user_groups_path, :method => :post do %>
    <%= hidden_field_tag :group_id, @group.id %>
    <%= submit_tag "JOIN GROUP!" %>
 <% end %>
