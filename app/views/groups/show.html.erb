<div class="center">
  <h1><%= @group.name %></h1>
  <h3><%= @group.description %></h3>
  <div class="left">
    <p><%= link_to "Create a Meetup for this Group", new_group_meetup_path(@group)%></p>
  </div>
  <div class="show-meetups right">
      <a id="show-meetups" href="/groups/<%= params['id'] %>/meetups" data-turbolinks="false">Show Meetups Index</a>
  </div>
</div>

<div class="comments"><br><br>
  <h3>Comments</h3>
  <%  UserGroup.group_comments("#{@group.id}").each do |association| %>
      <%= User.chop_email(association.user_id) %> says  <%= association.comment %><br>
  <% end %>
</div>

<div class="comment-container">
  <h3>leave a comment here</h3>
  <%= form_tag "/user_group/comment", :id => 'comment-form', :method => :post do %>
    <%= text_field_tag "comment" %>
    <%= hidden_field_tag :group_id, @group.id %>
    <%= hidden_field_tag :user_id, user_id %>
    <%= submit_tag "comment", :id => "submit-comment" %>
  <% end %>
</div>
