<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav>

            <li><%= link_to "All Groups", groups_path %></li>
            <li><%= link_to "All Meetups", meetups_path %></li>
            <li><%= link_to "Create A Group", new_group_path %></li>
            <li><%= link_to "Homepage", root_path %></li>
            <li><%= link_to "Sign in with facebook", omniauth_authorize_path(User.new, "facebook") if !session[:user] %></li>
      </nav>
    </div>
    <h2><%= flash[:notice] if flash[:notice] %></h2>
    <div class="content">
        <%= yield %>
    </div>
  </body>
</html>
