<%= form_for([@group, @meetup]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => (@meetup.errors.full_messages_for(:name).first || "") %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :day %>
  <%= f.text_field :day %><br>

  <%= f.label :time %>
  <%= f.text_field :time %><br>

  <%= f.hidden_field :group_id, value: @group.id %>

  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %><br>

  <%= f.fields_for :tags, Tag.new do |tag_builder| %>
    <%= tag_builder.text_field :name %>
  <% end %>
<%# end %>

  <%= f.submit %>
<% end %>
